<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Statistics">

    <LinearLayout
        android:id="@+id/dateContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <FrameLayout
                android:id="@+id/date_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="55dp">

                <TextView
                    android:id="@+id/start_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Start Date"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/e_d_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/end_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="End Date"/>

            </FrameLayout>

        </LinearLayout>

        <Button
            android:id="@+id/view_butt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default"
            android:text="VIEW"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_gravity="center"/>


        <!--        <ImageView-->
        <!--            android:id="@+id/previousBtn"-->
        <!--            android:background="@drawable/previous_arrow_icon"-->
        <!--            android:contentDescription="Previous Date"-->
        <!--            style="@style/admin_reservation_date_arrow"/>-->

        <!--        <TextView-->
        <!--            android:id="@+id/dateDisplay"-->
        <!--            android:text="Month Day, Year"-->
        <!--            style="@style/text_primary_medium_20sp"-->
        <!--            android:layout_gravity="center_vertical"-->
        <!--            android:layout_marginRight="20dp"-->
        <!--            android:layout_marginLeft="20dp" />-->

        <!--        <ImageView-->
        <!--            android:id="@+id/nextBtn"-->
        <!--            android:background="@drawable/next_arrow_icon"-->
        <!--            android:contentDescription="Next Date"-->
        <!--            style="@style/admin_reservation_date_arrow"/>-->


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp">

        </com.github.mikephil.charting.charts.BarChart>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>