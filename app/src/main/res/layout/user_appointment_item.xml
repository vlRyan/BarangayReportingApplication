<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/border_primary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textDay"
                style="@style/text_primary_italic_16sp"
                android:text="Date" />

            <TextView
                android:id="@+id/textTime"
                style="@style/text_primary_italic_16sp"
                android:text="Time"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textFirstName"
                style="@style/text_primary_regular_18sp"
                android:text="FirstName"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/textLastName"
                style="@style/text_primary_regular_18sp"
                android:text="LastName"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                style="@style/text_black_light_16sp"
                android:layout_marginEnd="5dp"
                android:text="Purpose:"/>

            <TextView
                android:id="@+id/textPurpose"
                style="@style/text_black_light_16sp"
                android:text="Purpose"
                android:layout_marginEnd="2dp"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                style="@style/text_black_light_16sp"
                android:layout_marginEnd="5dp"
                android:text="Purok:"/>

            <TextView
                android:id="@+id/textPurok"
                style="@style/text_black_light_16sp"
                android:text="Purok"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/editButton"
                style="@style/adapter_edit_primary_italic_14sp"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"/>

            <TextView
                android:id="@+id/deleteButton"
                style="@style/adapter_delete_reject_italic_14sp"
                android:layout_gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
