<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Universal text-->
    <style name="text_primary_regular_20sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_primary_regular_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_primary_medium_20sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_black_light_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_black_light_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_primary_regular_18sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_primary_italic_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_italic</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_black_italic_16sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_black_italic_14sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_primary_medium_24sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">24sp</item>
    </style>


    <!--    Input box-->
    <style name="text_input_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/border_primary</item>
        <item name="android:gravity">top|start</item>
        <item name="android:padding">10dp</item>
        <item name="android:hint">Input Text...</item>
        <item name="android:inputType">text</item>
    </style>


    <!--    Submit center button-->
    <style name="primary_button" parent="TextAppearance.AppCompat">
        <item name="backgroundTint">@color/primary</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <!--    Reject button-->
    <style name="reject_button" parent="TextAppearance.AppCompat">
        <item name="backgroundTint">@color/reject</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/button_primary</item>
    </style>


    <!--    Add floating button-->
    <style name="floating_button_primary_add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/add_icon</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:contentDescription">Add</item>
    </style>


    <!--    Adapter-->
    <style name="adapter_edit_primary_italic_14sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_italic</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Edit</item>
    </style>
    <style name="adapter_delete_reject_italic_14sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_italic</item>
        <item name="android:textColor">@color/reject</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">Delete</item>
    </style>
    <style name="adapter_read_more_primary_italic_13sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_italic</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:text">Learn More</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="adapter_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="adapter_date_black_italic_13sp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">Date</item>
    </style>
    <style name="adapter_description_black_light_15sp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:text">Description</item>
    </style>
    <style name="adapter_title_primary_light_18sp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">Title</item>
    </style>


    <!--    Reservation-->
    <style name="admin_reservation_box">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/background_grey</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="admin_reservation_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="admin_reservation_box_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="admin_reservation_date_arrow">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>


    <!--    Barangay officials-->
    <style name="official_upload_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/change_upload_icon</item>
        <item name="android:tint">@color/primary</item>
        <item name="android:visibility">gone</item>
        <item name="android:backgroundTint">#00FFFFFF</item>
    </style>
    <style name="official_profile">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:src">@drawable/profile_icon</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <!--    Profile-->
    <style name="profile_display_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/text_underline</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>